<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Cocktail name: <%= @cocktail.name %></h1>
    </div>
  </div>
</div>
<hr>
<br>
<h2>List of doses</h2>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
    Dose: <%= dose.description%> | 
    Ingredients: <%= dose.ingredient.name%>

  <%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

    </li>
  <% end %>
</ul>
<br>
<hr>

<%# <% cl_image_tag  %> %>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to all cokctails", :root %>
